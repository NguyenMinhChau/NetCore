@model IEnumerable<MyAppCodeFirst.EF.Loai>

@{
    ViewData["Title"] = "CATEGORY";
}

<h1>LIST CATEGORY</h1>

<p>
    <a asp-action="Create">CREATE NEW</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TenLoai)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MoTa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Hinh)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LoaiTruoc)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TenLoai)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MoTa)
            </td>
            <td>
                <img src="~/Hinh/Loai/@item.Hinh" style="width:50px; height:30px"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LoaiTruoc.TenLoai)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.MaLoai">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.MaLoai">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.MaLoai">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
